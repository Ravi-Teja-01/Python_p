
#Pattern with numbers

count =0
for i in range(6):
    for j in range(i):
        print(count,end =" ")
    count += 1
    print()

# Pattern in triangle form     

for i in range(6):
    for j in range(i):
        print("*",end = " ")
    print()

# Pattern with contineous numbers

for i in range(6):
    for j in range(6-1):
        print(" ",end =" ")
    for k in  range(2*i-1):
        print("*",end=" ")
    print()
